@model StoreProduct.Entity.Product
@{
    ViewBag.Title = "Ürün Düzenleme Sayfası";
}

<h3>Ürün Düzenle</h3>
<hr />
@using (Html.BeginForm())
{

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Ürün Adı</label>
        <div class="col-sm-10">
            @Html.TextBox("Name",null,new {@class="form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Açıklama</label>
        <div class="col-sm-10">
            @Html.TextArea("Description", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Fiyat</label>
        <div class="col-sm-10">
            @Html.TextBox("Price", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Stok Adeti</label>
        <div class="col-sm-10">
            @Html.TextArea("Stock", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Resim</label>
        <div class="col-sm-10">
            @Html.TextBox("Image", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Onaylı Mı?</label>
        <div class="col-sm-10">
            @Html.CheckBox("isApproved")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">AnaSayfa?</label>
        <div class="col-sm-10">
            @Html.CheckBox("isHome")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Popüler Mi?</label>
        <div class="col-sm-10">
            @Html.CheckBox("isFeatured")
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Kategori</label>
        <div class="col-sm-10">
            @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories, "Id", "Name"), new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </div>
</div>
}
