
@model IEnumerable<StoreProduct.Entity.Category>
@{
    /**/

    ViewBag.Title = "Kategori Admin Sayfası";
}
<h3>Kategori Listesi Lisesi</h3>
<hr />
@if (TempData["Updated"] != null)
{
    string urun = TempData["Updated"].ToString();
    <div class="alert alert-success" role="alert">
        <span class="glyphicon glyphicon-ok"></span>
        <b>@urun</b> ismindeki kayıt güncellendi.
    </div>
}
<a href="/Category/Create" class="btn btn-success">
    <span class="glyphicon glyphicon-plus"></span>
    Yeni Kategori Ekle
</a>
<hr />
<table class="table table-bordered table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                </td>
            </tr>
        }

    </tbody>
</table>





